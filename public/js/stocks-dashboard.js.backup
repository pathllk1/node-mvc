// Helper function to format large numbers
function formatLargeNumber(num, currency = 'USD') {
  if (num === null || num === undefined) return '--';

  // For volume (null currency) or when currency is not specified, don't add any prefix
  let prefix = '';
  if (currency === 'USD') {
    prefix = '$';
  } else if (currency === 'INR') {
    prefix = '₹';
  }

  if (num >= 1e12) {
    return `${prefix}${(num / 1e12).toFixed(2)}T`;
  } else if (num >= 1e9) {
    return `${prefix}${(num / 1e9).toFixed(2)}B`;
  } else if (num >= 1e6) {
    return `${prefix}${(num / 1e6).toFixed(2)}M`;
  } else if (num >= 1e3) {
    return `${prefix}${(num / 1e3).toFixed(2)}K`;
  }
  return `${prefix}${num.toString()}`;
}

// Chart management functions
let activeCharts = {};

async function loadStockChart(symbol, period = '1mo') {
  try {
    const response = await fetch(`/stocks/api/chart/${symbol}?period=${period}`);
    const chartData = await response.json();

    if (!response.ok) {
      throw new Error(chartData.error || 'Failed to fetch chart data');
    }

    const chartId = `stock-chart-${symbol.replace('.', '_')}`;
    const canvas = document.getElementById(chartId);

    if (!canvas) {
      console.error('Chart canvas not found:', chartId);
      return;
    }

    // Destroy existing chart if it exists
    if (activeCharts[symbol]) {
      activeCharts[symbol].destroy();
    }

    // Create new chart
    const ctx = canvas.getContext('2d');
    activeCharts[symbol] = new Chart(ctx, {
      type: 'line',
      data: chartData,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          },
          tooltip: {
            mode: 'index',
            intersect: false,
            callbacks: {
              label: function (context) {
                return `${chartData.meta.symbol}: ${chartData.meta.currency === 'INR' ? '₹' : '$'}${context.parsed.y.toFixed(2)}`;
              }
            }
          }
        },
        scales: {
          x: {
            display: true,
            grid: {
              display: false
            },
            ticks: {
              maxRotation: 0,
              autoSkip: true,
              maxTicksLimit: 10
            }
          },
          y: {
            display: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            },
            ticks: {
              callback: function (value) {
                return `${chartData.meta.currency === 'INR' ? '₹' : '$'}${value.toLocaleString()}`;
              }
            }
          }
        },
        interaction: {
          mode: 'nearest',
          axis: 'x',
          intersect: false
        }
      }
    });

  } catch (error) {
    console.error('Error loading chart:', error);
    // Show error message in chart container
    const chartContainer = document.querySelector(`#stock-chart-${symbol.replace('.', '_')}`).parentElement;
    chartContainer.innerHTML = `
      <div class="flex items-center justify-center h-64 text-gray-500">
        <div class="text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-2 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.47.881-6.08 2.32M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p>Error loading chart data</p>
          <p class="text-sm mt-1">${error.message}</p>
    `;
  }
}

