<%- layout('layouts/main') -%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mt-8">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gradient-to-r from-gray-800 to-gray-900 text-white px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-xl font-semibold flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Server Console
            </h2>
            <p class="text-sm text-gray-300 mt-1">Real-time server log output</p>
          </div>
          <div class="flex items-center space-x-4">
            <div class="flex items-center text-sm">
              <div id="connectionIndicator" class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
              <span id="connectionStatus" class="text-green-400">Connected</span>
            </div>
            <span class="text-sm text-gray-300">Socket ID: <span id="socketId" class="font-mono">-</span></span>
          </div>
        </div>
      </div>
      
      <div class="border-b border-gray-200 bg-gray-50 px-6 py-3">
        <div class="flex flex-wrap items-center gap-3">
          <button id="clearConsoleBtn" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-md transition text-sm flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Clear
          </button>
          <button id="toggleAutoScrollBtn" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md transition text-sm">
            Auto Scroll: <span class="font-semibold">ON</span>
          </button>
          <div class="flex space-x-1">
            <button id="filterInfoBtn" class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-md transition text-sm font-medium">
              Info
            </button>
            <button id="filterWarnBtn" class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-yellow-600 rounded-md transition text-sm font-medium">
              Warn
            </button>
            <button id="filterErrorBtn" class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-red-600 rounded-md transition text-sm font-medium">
              Error
            </button>
            <button id="filterDebugBtn" class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-blue-600 rounded-md transition text-sm font-medium">
              Debug
            </button>
          </div>
        </div>
      </div>
      
      <div class="flex flex-col lg:flex-row gap-6 p-6">
        <div class="lg:w-3/4">
          <div id="consoleOutput" class="font-mono text-sm bg-gray-900 text-green-400 rounded-lg p-4 h-96 overflow-y-auto">
            <div class="console-line text-gray-500">[INFO] Server console initialized...</div>
          </div>
        </div>
        
        <div class="lg:w-1/4">
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-medium text-gray-800 mb-4">Log Statistics</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Total Logs:</span>
                <span id="totalLogsCount" class="font-medium text-gray-800">0</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-red-600">Errors:</span>
                <span id="errorLogsCount" class="font-medium text-red-600">0</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-blue-600">Info:</span>
                <span id="infoLogsCount" class="font-medium text-blue-600">0</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-yellow-600">Warnings:</span>
                <span id="warnLogsCount" class="font-medium text-yellow-600">0</span>
              </div>
            </div>
            
            <div class="mt-6 pt-4 border-t border-gray-200">
              <h4 class="text-sm font-medium text-gray-700 mb-2">Connection Status</h4>
              <div class="text-sm text-gray-600">
                <div class="flex items-center mb-1">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                  <span>Connected</span>
                </div>
                <div class="text-xs text-gray-500 mt-2">Socket ID: <span id="socketIdDisplay" class="font-mono">-</span></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/console.js" data-reload-on-spa></script>