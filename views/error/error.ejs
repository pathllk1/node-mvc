<% layout('layouts/main') -%>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-red-600 mb-4">500 - Server Error</h1>
    <p class="text-gray-600 mb-6">Something went wrong on our end. Please try again later.</p>
    <a href="/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300">Go Home</a>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <h6 class="text-red-800 font-medium mb-2">Error Details:</h6>
            <pre class="text-red-600 text-sm bg-red-100 p-3 rounded"><%= error.message %></pre>
        </div>
    <% } %>
</div>