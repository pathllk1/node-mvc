<%- layout('layouts/main') -%>

<div class="flex flex-col h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm p-4 flex-shrink-0 w-full">
    <h1 class="text-2xl font-bold text-gray-800">Stock Dashboard</h1>
    <p class="text-sm text-gray-600 mt-1">Real-time stock data with WebSocket updates</p>
  </div>

  <!-- Search Bar -->
  <div class="bg-blue-50 p-2 border-b flex-shrink-0 w-full">
    <div class="w-full flex flex-wrap items-center gap-4">
      <div class="flex-1 min-w-[200px]">
        <input 
          type="text" 
          id="search-input" 
          placeholder="Search stocks..." 
          class="w-full px-3 py-1 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>
      <div class="text-xs space-x-4">
        <span id="connected-clients">Clients: 0</span>
        <span id="last-update">Last Update: --:--:--</span>
        <span id="total-stocks">Stocks: 0</span>
      </div>
    </div>
  </div>

  <!-- Stock Data Table -->
  <div class="flex-1 overflow-auto p-2 flex-grow w-full">
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white rounded-lg overflow-hidden">
        <thead class="bg-gray-100 sticky top-0">
          <tr>
            <th class="py-2 px-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="symbol">Symbol <span id="sort-symbol"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="price">Price <span id="sort-price"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="change">Change <span id="sort-change"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="changePercent">% <span id="sort-percent"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="open">Open <span id="sort-open"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="high">High <span id="sort-high"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="low">Low <span id="sort-low"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="close">Close <span id="sort-close"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="volume">Vol <span id="sort-volume"></span></th>
            <th class="py-2 px-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-200" data-sort="marketCap">Mkt Cap <span id="sort-marketCap"></span></th>
            <th class="py-2 px-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">View</th>
            <th class="py-2 px-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">TA</th>
          </tr>
        </thead>
        <tbody id="stock-table-body" class="divide-y divide-gray-200">
          <tr><td colspan="11" class="py-4 px-3 text-center text-gray-500">Loading stock data...</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Stock Detail Modal -->
  <div id="stock-modal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto transform transition-transform duration-300 scale-95">
      <div class="p-6">
        <div class="flex justify-between items-start mb-4 pb-3 border-b border-gray-200">
          <div>
            <h2 id="modal-stock-title" class="text-2xl font-bold text-gray-900">Stock Details</h2>
            <p class="text-sm text-gray-500 mt-1">Detailed information about the selected stock</p>
          </div>
          <button id="close-modal" class="text-gray-400 hover:text-gray-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-full p-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div id="stock-detail-content" class="space-y-5">
          <!-- Content will be populated dynamically -->
        </div>
      </div>
    </div>
  </div>
</div>

<!-- CRITICAL: Script load order matters! -->
<!-- Socket.io must load BEFORE stocks-dashboard.js -->
<script src="/socket.io/socket.io.js"></script>
<script src="/cdns/chart.js"></script>

<!-- 
  IMPORTANT: data-reload-on-spa attribute tells the SPA router to:
  1. Remove and reload this script on every SPA navigation to this page
  2. This ensures WebSocket connections are properly re-initialized
  3. Without this, WebSocket connections fail on SPA navigation
-->
<script src="/js/stocks-dashboard.js" data-reload-on-spa></script>
<script src="/js/components/technical-analysis-modal.js"></script>