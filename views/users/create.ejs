<% layout('layouts/main') -%>

<h1 class="text-2xl font-bold text-gray-800 mb-6"><%= title %></h1>

<form method="POST" action="/users" class="bg-white p-6 rounded-lg shadow-md max-w-lg">
    <div class="mb-4">
        <label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
        <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" id="name" name="name" required>
    </div>
    <div class="mb-4">
        <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
        <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" id="email" name="email" required>
    </div>
    <div class="flex space-x-4">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300">Create User</button>
        <a href="/users" class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition duration-300">Cancel</a>
    </div>
</form>