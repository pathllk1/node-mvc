<% layout('layouts/main') -%>

<div class="bg-white rounded-lg shadow-md overflow-hidden max-w-lg">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-800"><%= title %></h1>
    </div>
    <div class="p-6">
        <h5 class="text-lg font-medium text-gray-700 mb-4">User Details</h5>
        <div class="space-y-2">
            <p class="text-gray-600"><span class="font-medium">ID:</span> <%= user.id %></p>
            <p class="text-gray-600"><span class="font-medium">Name:</span> <%= user.name %></p>
            <p class="text-gray-600"><span class="font-medium">Email:</span> <%= user.email %></p>
        </div>
    </div>
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex justify-between">
        <a href="/users" class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition duration-300">Back to Users</a>
        <a href="/users/<%= user.id %>/edit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300">Edit User</a>
    </div>
</div>